.header
    - if current_account
        .header-bar.logged-in
            - if current_account.avatar
                .doublejump-gap.center-text
                    img.avatar.small src="#{current_account.avatar}"
            - else
                .doublejump
            div.center-text.padding
                span.dropdown
                    a data-toggle="dropdown" class="dropdown-toggle"
                        = " " + current_account.name + " " + current_account.surname + " "
                        i.fa.fa-chevron-down

                    ul.dropdown-menu
                        li
                            a href="#" Home
                        - if current_account.role == "admin"
                            li
                                a href="/admin" Padrino Admin
                            li
                                a href="/manage" Manage Content
                        li.divider
                        li
                            a href="/destroy" Logout

                div
                    small.extra-small
                            | (that's you!)
    - else
        .header-bar
            .doublejump
    .gradient-strip